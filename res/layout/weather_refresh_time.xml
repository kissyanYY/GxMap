<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"   
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="7dp" >
    
         
    <LinearLayout  android:id="@+id/tttL"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:layout_centerHorizontal="true" >
     <ImageButton
        android:id="@+id/to_amap_app"
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tonavic" />
    
    <TextView
    	android:id="@+id/txt_wrather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:text="地图天气"/>    
    </LinearLayout>

  
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tttL"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_refrs"
                android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:layout_marginRight="3dp"
               	android:src="@drawable/common_icon_refresh"/>
            <TextView
            	android:id="@+id/txt_update_time"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="16sp"
            	android:textColor="#FFFFFF"
            	android:text="--"/>
        </LinearLayout>
</RelativeLayout>
